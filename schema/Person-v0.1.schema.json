{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://test.test/schema/Person-v0.1.schema.json",
  "title": "Person",
  "type": "object",
  "properties": {
    "Name": {
      "type": "string",
      "description": "The full name of the person",
      "required": true
    },
    "Institution": {
      "type": "string",
      "description": "The institution where the person works",
      "required": true
    },
    "Person Class": {
      "type": "string",
      "enum": [
        "Conservator", 
        "Heritage Scientist", 
        "Curator", 
        "Art Historian", 
        "Chemist", 
        "Restorer", 
        "Archaeologist",
        "Conservation Scientist",
        "Researcher",
        "Technician",
        "Archivist",
        "Museum Professional"
      ],
      "description": "The professional class of the person in relation to Heritage Science and Paintings Conservation",
      "required": true
    },
    "Job Role": {
      "type": "string",
      "description": "The specific job role of the person",
      "required": true
    },
    "Email": {
      "type": "string",
      "format": "email",
      "description": "The email address of the person"
    },
    "Further person details": {
      "type": "string",
      "description": "Additional information or notes about the person"
    }
  },
  "required": [
    "Name",
    "Institution",
    "Person Class",
    "Job Role"
  ]
}
